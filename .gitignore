#include <conio.h>
#include <locale.h>
#include <iostream>
#include <string.h>
#include <stdio.h>

using namespace std;

int main()
{
    setlocale(LC_ALL, "rus");
    cout << "\tПростая Перестановка" << endl;


    cout << "\tДешифрование";
    int n, m;
    char d[50];
    char massiv[100][100];
    int count = 0;

    cout << "\nИсходное слово: ";
    cin>> d;

    int amount = strlen(d);
    cout << "\n\tКоличество символов: " << amount << endl;
    cout << "\n\t" << "  Ввести ключ (M x N) " << endl << "\n";
    cout << "Ввести кол-во строк: ";
    cin >> m;
    cout << "Ввести кол-во столбцов: ";
    cin >> n;

    for (int i = 0; i < n; i++) // в массив вносим
    {
        for (int j = 0; j < m; j++)
        {
            massiv[i][j] = d[count];
            count++;
        }
    }

    cout << "Дешифрованное слово: ";
    for (int j = 0; j < m; j++)
    {
        for (int i = 0; i < n; i++) //выводим из массива
        {
            cout << massiv[i][j];
        }
    }


    std::cout << endl;
}
