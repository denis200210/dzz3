#include <conio.h>
#include <locale.h>
#include <iostream>
#include <string.h>
#include <stdio.h>

using namespace std;

int main()
{
	setlocale(LC_ALL, "rus");
	std::cout << "\t\t\tПростая Перестановка" << endl;

	char s[50];
	char massiv[100][100];
	int b, c;
	int count = 0;

	std::cout << "\nИсходное слово: ";
	cin >>(s);
	int amount = strlen(s);
	std::cout << "\n\t\t\tКоличество символов: " << amount << endl;
	std::cout<< "\n\t\t\t" << " Ввести ключ (M x N) " << endl << "\n";
	std::cout<< "Ввести кол-во строк: ";
	cin >> b;
	std::cout << "Ввести кол-во столбцов: ";
	cin>> c;

	for (int i = 0; i < b; i++)
	{
		for (int j = 0; j < c; j++)
		{
			massiv[i][j] = s[count];
			count++;
		}
	}

	std::cout << "Зашифрованное слово: ";
	for (int j = 0; j < c; j++)
	{
		for (int i = 0; i < b; i++)
		{
			std::cout<< massiv[i][j];
		}
	}
	std::cout<< endl;

}
